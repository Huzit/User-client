<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:background="#00FFFFFF"
>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="@dimen/layout_width"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:background="#56C4F6"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="40dp"
            android:id="@+id/constraintLayout">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/linearLayout">
            <TextView
                    android:id="@+id/name"
                    android:text="홍길동"
                    android:textSize="29sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
            />
            <TextView
                    android:id="@+id/product"
                    android:text="냉장고"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
            />
            <TextView
                    android:id="@+id/phone"
                    android:text="010-4027-5019"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
            />
        </LinearLayout>
        <TextView
                android:id="@+id/address"
                android:text="부산 남구 유엔평화로 29번길 99"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <CalendarView
            android:layout_width="@dimen/layout_width"
            android:layout_height="wrap_content" android:id="@+id/calendarView2"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="@dimen/activity_vertical_margin"/>
    <TableLayout
            android:layout_width="@dimen/layout_width"
            android:layout_height="wrap_content" app:layout_constraintTop_toBottomOf="@+id/calendarView2"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/activity_vertical_margin" android:id="@+id/tableLayout">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center">
            <Button
                    android:text="Button"
                    android:layout_marginStart="@dimen/table_layout_margin"
                    android:layout_marginEnd="@dimen/table_layout_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/button" app:backgroundTint="#5C000000"/>
            <Button
                    android:text="Button"
                    android:layout_marginStart="@dimen/table_layout_margin"
                    android:layout_marginEnd="@dimen/table_layout_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/button2" app:backgroundTint="#5C000000"/>
            <Button
                    android:text="Button"
                    android:layout_marginStart="@dimen/table_layout_margin"
                    android:layout_marginEnd="@dimen/table_layout_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/button3" app:backgroundTint="#5C000000"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center">
            <Button
                    android:text="Button"
                    android:layout_marginStart="@dimen/table_layout_margin"
                    android:layout_marginEnd="@dimen/table_layout_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/button6" app:backgroundTint="#5C000000"/>
            <Button
                    android:text="Button"
                    android:layout_marginStart="@dimen/table_layout_margin"
                    android:layout_marginEnd="@dimen/table_layout_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/button5" app:backgroundTint="#5C000000"/>
            <Button
                    android:text="Button"
                    android:layout_marginStart="@dimen/table_layout_margin"
                    android:layout_marginEnd="@dimen/table_layout_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/button4" app:backgroundTint="#5C000000"/>
        </TableRow>
    </TableLayout>
    <Button
            android:text="이전"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button_before"
            app:layout_constraintStart_toStartOf="@+id/calendarView2"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout"
            android:layout_marginTop="@dimen/activity_vertical_margin"/>
    <Button
            android:text="다음"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button_next"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout"
            app:layout_constraintEnd_toEndOf="@+id/calendarView2"
            android:layout_marginTop="@dimen/activity_vertical_margin"/>
</androidx.constraintlayout.widget.ConstraintLayout>